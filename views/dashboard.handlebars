<section class="user-details-container">
  <div class="user-image-dashboard-container">
    <img class="user-image-dashboard" src="/{{user_image}}">
  </div>
  <div class="user-details-text">
    <p><span class="details-label">Username:</span> {{username}}</p>
    <p><span class="details-label">Email:</span> {{email}}</p>
  </div>
</section>


<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-body">Post</label>
      <textarea type="text" id="post-body" name="post-body"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li class="dashboard-post-item">
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit<br> post</a>
      {{> post-info-user post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>

