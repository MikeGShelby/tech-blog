<article class="post">
  <div class="title">
    <a href="{{post}}" target="_blank">{{title}}</a>
      <span>({{format_url post}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by
    <img class="user-image" src="/{{user.image}}">

    {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>